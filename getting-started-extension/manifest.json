{
  "name": "Getting Started",
  "description": "My version (added folder structure) of the Chrome extension 'Getting Started' tutorial",
  "version": "1.0",
  "options_page": "options/options.html",
  "manifest_version": 2,
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "assets/logo.png",
      "32": "assets/logo.png",
      "48": "assets/logo.png",
      "128": "assets/logo.png"
    }
  },
  "icons": {
    "16": "assets/logo.png",
    "32": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  }
}
